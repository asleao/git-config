[core]
    editor = vim
[color]
    ui = auto
[color "branch"]
    current = yellow bold
    local = green bold
    remote = cyan bold
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
    whitespace = red reverse
[color "status"]
    added = green bold
    changed = yellow bold
    untracked = red bold
[diff]
    tool =meld
    guitool = meld
[diff "meld"]
    path =/usr/bin/meld 
    trustExitCode = false
[merge]
    tool =meld
[mergetool "meld"]
    path=/usr/bin/meld
    trustExitCode = false
[difftool]
    prompt=false
[difftool "meld"]
    path =/usr/bin/meld 
    trustExitCode = false
